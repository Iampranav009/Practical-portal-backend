# ======================================
# Practical Portal - Environment Variables
# ======================================
# Copy this file to .env.local for development
# Create .env files for different environments

# ======================================
# FRONTEND CONFIGURATION (Next.js)
# ======================================

# Firebase Configuration (Frontend)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api
# For production, change to: https://your-backend-domain.com/api

# Application Configuration
NEXT_PUBLIC_APP_NAME=Practical Portal
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# ======================================
# BACKEND CONFIGURATION (Express.js)
# ======================================

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_NAME=practical_portal

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_chars
JWT_EXPIRES_IN=7d

# Firebase Admin SDK (Backend)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ======================================
# PRODUCTION SPECIFIC
# ======================================

# Domain Configuration
FRONTEND_DOMAIN=https://your-app.vercel.app
BACKEND_DOMAIN=https://your-backend.render.com

# Database (Production)
# Use connection string for cloud databases
DATABASE_URL=mysql://username:password@host:port/database

# Redis (for sessions/caching - optional)
REDIS_URL=redis://localhost:6379

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_if_using
GOOGLE_ANALYTICS_ID=your_ga_id_if_using

# ======================================
# DEVELOPMENT SPECIFIC
# ======================================

# Development tools
NEXT_PUBLIC_DEV_TOOLS=true
DEBUG=true

# Local storage paths
UPLOAD_PATH=./uploads
LOG_PATH=./logs
